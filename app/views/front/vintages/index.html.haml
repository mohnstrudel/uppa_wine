.bottlesWrapper
  -@vintages.each_with_index do |vintage, index|
    .bottle{class: get_bottle_class(index)}
      -if index == 0
        %a.goToWines{:href => "#"} ВИНА
      =image_tag_or_default(vintage.wines.last, 'logo', class: 'bottleImage')
      .bottleDescription
        =link_to vintage_wine_path(vintage, vintage.wines.last), class: 'wineDescription' do
          .wineName=vintage.title
          .wineSortWrapper
            .wineSort=vintage.subtitle
            .arrowWine