= render "menu", is_black: true
.bottlesWrapper
  .bottle.upperBlock
    %a.goToWines{:href => "#"} ВИНА

  -@wines.each_with_index do |wine, index|
    .bottle{class: get_bottle_class(index)}
      =image_tag_or_default(wine, 'logo', class: 'bottleImage')
      .bottleDescription
        =link_to wine_path(wine), class: 'wineDescription' do
          .wineName=wine.title
          .wineSortWrapper
            .wineSort CHARDONAY
            .arrowWine
  
